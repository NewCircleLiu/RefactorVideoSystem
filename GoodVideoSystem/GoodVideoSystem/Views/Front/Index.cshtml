</body>
    <script>
        jQuery(function () {
            showTime();
        })

        //设定倒数秒数  
        var t = 3;
        //显示倒数秒数  
        function showTime() {
            jQuery("#info").text("将在" + t + "秒后进入系统");
            if (t == 1) {
                location.href = '/User/Home?UserUniqueCode=123456789&Phone=11111111111';
            }
            t -= 1;
            //每秒执行一次,showTime()  
            setTimeout("showTime()", 1000);
        }
    </script>
