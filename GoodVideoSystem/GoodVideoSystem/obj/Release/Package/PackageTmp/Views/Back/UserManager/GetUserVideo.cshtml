@{
    ViewBag.Title = "古驿平安-用户视频";
    Layout = "~/Views/Shared/_BackLayout.cshtml";
}
@using RefactorVideoSystem.Models.Models;
@model RefactorVideoSystem.Models.Models.Code[]

<style>
    #headTitle th {
        font-family: 'Microsoft YaHei';
        font-size: 14px;
        color: black;
    }
</style>

<div class="main" style="margin-left: 290px; width: 80%">
    <div class="row">
        <ol class="breadcrumb">
            <li><a href="@Url.Content("~/Qhgypacz/BackMain/")"><span class="glyphicon glyphicon-home"></span></a></li>
            <li><a href="@Url.Content("~/UserManager/")" style="color:#777">用户管理</a></li>
            <li class="active">查看用户视频</li>
        </ol>
    </div>
    <!--/.row-->
    <div class="row">
        <div>
            <div class="panel panel-default">
                <div class="panel-heading">用户所有视频</div>
                <div class="panel-body">

                    <table class="table table-bordered table-hover class" style="margin-top: 10px;">
                        <thead>
                            <tr id="headTitle">
                                <th>序号</th>
                                <th>持有邀请码</th>
                                <th>视频编号</th>
                                <th>视频名称</th>
                            </tr>
                        </thead>
                        @{int i = 1;}
                        <tbody>
                            @foreach (Code c in Model)
                            {
                                <tr>
                                    <td>@i</td>
                                    <td>@c.CodeValue</td>
                                    <td>@c.vid</td>
                                    <td>@c.Video.VideoName</td>
                                </tr>
                                i++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
